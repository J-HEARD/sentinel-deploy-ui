{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "isWizard": false,
            "basics": {
                "description": "**Microsoft Sentinel Core Deployment** - Deploy resource group, workspace, enable Sentinel, and configure data connectors.",
                "location": {
                    "label": "Location",
                    "toolTip": "Location for all resources",
                    "resourceTypes": [
                        "Microsoft.OperationalInsights/workspaces"
                    ]
                }
            }
        },
        "basics": [
            {
                "name": "rgName",
                "type": "Microsoft.Common.TextBox",
                "label": "Resource Group Name",
                "placeholder": "",
                "defaultValue": "CISO-RG-SENTINEL",
                "toolTip": "Name of the resource group to create",
                "constraints": {
                    "required": true,
                    "regex": "^[a-zA-Z0-9-._()]+$",
                    "validationMessage": "Only alphanumeric characters, hyphens, underscores, periods, and parentheses are allowed."
                },
                "visible": true  
            },
            {
                "name": "workspaceName",
                "type": "Microsoft.Common.TextBox",
                "label": "Workspace Name",
                "placeholder": "",
                "defaultValue": "CISO-WS-SENTINEL",
                "toolTip": "Name for the Log Analytics workspace used to aggregate data",
                "constraints": {
                    "required": true,
                    "regex": "^[a-zA-Z0-9-]+$",
                    "validationMessage": "Only alphanumeric characters and hyphens are allowed."
                },
                "visible": true
            },
            {
                "name": "dailyQuota",
                "type": "Microsoft.Common.TextBox",
                "label": "Daily ingestion limit (GB)",
                "placeholder": "0",
                "defaultValue": "0",
                "toolTip": "Daily ingestion limit in GBs. 0 means no limit.",
                "constraints": {
                    "required": false,
                    "regex": "^[0-9]+$",
                    "validationMessage": "Must be a valid number"
                },
                "visible": true
            },
            {
                "name": "dataRetention",
                "type": "Microsoft.Common.Slider",
                "min": 7,
                "max": 730,
                "label": "Data retention (days)",
                "defaultValue": 90,
                "showStepMarkers": false,
                "toolTip": "Number of days of retention (7-730)",
                "constraints": {
                    "required": false
                },
                "visible": true
            },
            {
                "name": "pricingTier",
                "type": "Microsoft.Common.DropDown",
                "label": "Pricing Tier",
                "placeholder": "",
                "defaultValue": "PerGB2018",
                "toolTip": "Select the pricing tier for the workspace",
                "constraints": {
                    "allowedValues": [
                        {
                            "label": "Pay-as-you-go",
                            "value": "PerGB2018"
                        },
                        {
                            "label": "Commitment Tier",
                            "value": "CapacityReservation"
                        }
                    ],
                    "required": true
                },
                "visible": true
            },
            {
                "name": "capacityReservation",
                "type": "Microsoft.Common.DropDown",
                "label": "Commitment Tier",
                "placeholder": "",
                "defaultValue": 100,
                "toolTip": "Select the daily commitment tier (only applies to Commitment Tier pricing)",
                "constraints": {
                    "allowedValues": [
                        {
                            "label": "100 GB",
                            "value": 100
                        },
                        {
                            "label": "200 GB",
                            "value": 200
                        },
                        {
                            "label": "300 GB",
                            "value": 300
                        },
                        {
                            "label": "400 GB",
                            "value": 400
                        },
                        {
                            "label": "500 GB",
                            "value": 500
                        },
                        {
                            "label": "1000 GB",
                            "value": 1000
                        },
                        {
                            "label": "2000 GB",
                            "value": 2000
                        },
                        {
                            "label": "5000 GB",
                            "value": 5000
                        }
                    ],
                    "required": false
                },
                "visible": "[equals(basics('pricingTier'), 'CapacityReservation')]"
            }
        ],
        "steps": [
            {
                "name": "dataConnectors",
                "label": "Data Connectors",
                "elements": [
                    {
                        "name": "infoBoxConnectors",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "Select which data connectors to enable in your Microsoft Sentinel environment",
                            "uri": "https://learn.microsoft.com/azure/sentinel/data-connectors-reference"
                        }
                    },
                    {
                        "name": "enableDataConnectors",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Select data connectors to enable",
                        "placeholder": "",
                        "multiselect": true,
                        "filter": true,
                        "filterPlaceholder": "Filter items...",
                        "multiLine": true,
                        "defaultDescription": "Select one or more data connectors",
                        "toolTip": "Select the data connectors that you would like to enable",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Azure Active Directory",
                                    "description": "Collect Azure AD sign-in and audit logs (includes Identity Protection alerts)",
                                    "value": "AzureActiveDirectory"
                                },
                                {
                                    "label": "Office 365",
                                    "description": "Collect Office 365 audit logs for Exchange, SharePoint, and Teams",
                                    "value": "Office365"
                                },
                                {
                                    "label": "Microsoft Defender for Cloud",
                                    "description": "Collect security alerts from Microsoft Defender for Cloud",
                                    "value": "MicrosoftDefenderForCloud"
                                },
                                {
                                    "label": "Microsoft 365 Defender",
                                    "description": "Import incidents from Microsoft 365 Defender",
                                    "value": "Microsoft365Defender"
                                },
                                {
                                    "label": "Dynamics 365",
                                    "description": "Collect Dynamics 365 activity logs",
                                    "value": "Dynamics365"
                                },
                                {
                                    "label": "Microsoft Defender for IoT",
                                    "description": "Collect IoT security alerts",
                                    "value": "IOT"
                                },
                                {
                                    "label": "Office 365 Project",
                                    "description": "Collect Office 365 Project logs",
                                    "value": "Office365Project"
                                },
                                {
                                    "label": "Office IRM",
                                    "description": "Collect Office Information Rights Management alerts",
                                    "value": "OfficeIRM"
                                },
                                {
                                    "label": "Power BI",
                                    "description": "Collect Power BI activity logs",
                                    "value": "PowerBI"
                                },
                                {
                                    "label": "Threat Intelligence",
                                    "description": "Import threat indicators",
                                    "value": "ThreatIntelligence"
                                }
                            ],
                            "required": false
                        },
                        "visible": true
                    },
                    {
                        "name": "aadStreams",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Azure AD data types",
                        "placeholder": "",
                        "multiselect": true,
                        "defaultValue": ["SignInLogs", "AuditLogs"],
                        "toolTip": "Select which Azure AD log types to collect",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Sign-in logs",
                                    "value": "SignInLogs"
                                },
                                {
                                    "label": "Audit logs",
                                    "value": "AuditLogs"
                                },
                                {
                                    "label": "Non-interactive user sign-in logs",
                                    "value": "NonInteractiveUserSignInLogs"
                                },
                                {
                                    "label": "Service principal sign-in logs",
                                    "value": "ServicePrincipalSignInLogs"
                                },
                                {
                                    "label": "Managed identity sign-in logs",
                                    "value": "ManagedIdentitySignInLogs"
                                },
                                {
                                    "label": "Provisioning logs",
                                    "value": "ProvisioningLogs"
                                },
                                {
                                    "label": "ADFS sign-in logs",
                                    "value": "ADFSSignInLogs"
                                },
                                {
                                    "label": "User risk events",
                                    "value": "UserRiskEvents"
                                },
                                {
                                    "label": "Risky users",
                                    "value": "RiskyUsers"
                                },
                                {
                                    "label": "Network access traffic logs",
                                    "value": "NetworkAccessTrafficLogs"
                                },
                                {
                                    "label": "Risky service principals",
                                    "value": "RiskyServicePrincipals"
                                },
                                {
                                    "label": "Service principal risk events",
                                    "value": "ServicePrincipalRiskEvents"
                                }
                            ],
                            "required": false
                        },
                        "visible": "[contains(steps('dataConnectors').enableDataConnectors, 'AzureActiveDirectory')]"
                    }
                ]
            },
            {
                "name": "settings",
                "label": "Settings",
                "elements": [
                    {
                        "name": "enableUeba",
                        "type": "Microsoft.Common.CheckBox",
                        "label": "Enable User Entity Behavior Analytics (UEBA)",
                        "toolTip": "Enable UEBA to detect anomalous user behavior. Identity provider configuration can be done later through the portal.",
                        "defaultValue": true
                    }
                ]
            }
        ],
        "outputs": {
            "rgName": "[basics('rgName')]",
            "workspaceName": "[basics('workspaceName')]",
            "dailyQuota": "[int(basics('dailyQuota'))]",
            "dataRetention": "[basics('dataRetention')]",
            "pricingTier": "[basics('pricingTier')]",
            "capacityReservation": "[basics('capacityReservation')]",
            "immediatePurgeDataOn30Days": true,
            "enableUeba": "[steps('settings').enableUeba]",
            "enableDataConnectors": "[steps('dataConnectors').enableDataConnectors]",
            "aadStreams": "[steps('dataConnectors').aadStreams]",
            "location": "[location()]"
        }
    }
}