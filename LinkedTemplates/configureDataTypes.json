{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Log Analytics workspace used to aggregate data"
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "Azure AD tenant ID"
            }
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "[subscription().subscriptionId]",
            "metadata": {
                "description": "Subscription Id to monitor"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "aadName": "[concat('aad', uniqueString(resourceGroup().id))]",
        "o365Name": "[concat('o365', uniqueString(resourceGroup().id))]",
        "mdiName": "[concat('mdi', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
            "apiVersion": "2020-01-01",
            "location": "[parameters('location')]",
            "name": "[concat(parameters('workspaceName'),'/Microsoft.SecurityInsights/',variables('aadName'))]",
            "kind": "AzureActiveDirectory",
            "properties": {
                "tenantId": "[parameters('tenantId')]",
                "dataTypes": {
                    "alerts": {
                        "state": "enabled"
                    },
                    "signinLogs": {
                        "state": "enabled"
                    },
                    "auditLogs": {
                        "state": "enabled"
                    },
                    "nonInteractiveUserSignInLogs": {
                        "state": "enabled"
                    },
                    "servicePrincipalSignInLogs": {
                        "state": "enabled"
                    },
                    "managedIdentitySignInLogs": {
                        "state": "enabled"
                    },
                    "provisioningLogs": {
                        "state": "enabled"
                    },
                    "adfsSignInLogs": {
                        "state": "enabled"
                    },
                    "userRiskEvents": {
                        "state": "enabled"
                    },
                    "riskyUsers": {
                        "state": "enabled"
                    },
                    "networkAccessTrafficLogs": {
                        "state": "enabled"
                    },
                    "riskyServicePrincipals": {
                        "state": "enabled"
                    },
                    "servicePrincipalRiskEvents": {
                        "state": "enabled"
                    }
                }
            }
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
            "apiVersion": "2020-01-01",
            "location": "[parameters('location')]",
            "name": "[concat(parameters('workspaceName'),'/Microsoft.SecurityInsights/',variables('o365Name'))]",
            "kind": "Office365",
            "properties": {
                "tenantId": "[parameters('tenantId')]",
                "dataTypes": {
                    "exchange": {
                        "state": "enabled"
                    },
                    "sharePoint": {
                        "state": "enabled"
                    },
                    "teams": {
                        "state": "enabled"
                    },
                    "oneDrive": {
                        "state": "enabled"
                    },
                    "powerBI": {
                        "state": "enabled"
                    },
                    "dynamics365": {
                        "state": "enabled"
                    },
                    "yammer": {
                        "state": "enabled"
                    },
                    "skypeForBusiness": {
                        "state": "enabled"
                    },
                    "office365Project": {
                        "state": "enabled"
                    },
                    "office365IRM": {
                        "state": "enabled"
                    }
                }
            }
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
            "apiVersion": "2020-01-01",
            "location": "[parameters('location')]",
            "name": "[concat(parameters('workspaceName'),'/Microsoft.SecurityInsights/',variables('mdiName'))]",
            "kind": "AzureAdvancedThreatProtection",
            "properties": {
                "tenantId": "[parameters('tenantId')]",
                "dataTypes": {
                    "alerts": {
                        "state": "enabled"
                    },
                    "securityEvents": {
                        "state": "enabled"
                    }
                }
            }
        }
    ],
    "outputs": {
        "dataTypesConfigured": {
            "type": "string",
            "value": "Data types configured for Azure Active Directory, Microsoft 365, and Microsoft Defender for Identity connectors."
        }
    }
} 